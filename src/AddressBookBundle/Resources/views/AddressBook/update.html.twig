{% extends 'base.html.twig' %}
{% block title %}LillyDoo | Delete{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-7">
        <div class="p-5">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Update {{ addressbook.firstName }} {{ addressbook.lastName }}!</h1>
            </div>
            <form action="{{ path('address_book_store', {'id' : addressbook.id}) }}" method="post" enctype="multipart/form-data">
                <div class="form-group row">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        {{ form_widget(form.firstname, {'attr' : {'class' : 'form-control', 'placeholder': 'Frirst Name...'}}) }}
                    </div>
                    <div class="col-sm-6">
                        {{ form_widget(form.lastname, {'attr' : {'class' : 'form-control', 'placeholder': 'Last Name...'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_widget(form.email, {'attr' : {'class' : 'form-control', 'placeholder': 'Email...'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.streetNumber, {'attr' : {'class' : 'form-control', 'placeholder': 'Street and Number...'}}) }}
                </div>
                <div class="form-group row">
                    <div class="col-sm-4 mb-3 mb-sm-0">
                        {{ form_widget(form.zip, {'attr' : {'class' : 'form-control', 'placeholder': 'Zip Code...'}}) }}
                    </div>
                    <div class="col-sm-4">
                        {{ form_widget(form.city, {'attr' : {'class' : 'form-control', 'placeholder': 'City...'}}) }}
                    </div>
                    <div class="col-sm-4">
                        {{ form_widget(form.country, {'attr' : {'class' : 'form-control', 'placeholder': 'Country...'}}) }}
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        {{ form_widget(form.phonenumber, {'attr' : {'class' : 'form-control', 'placeholder': 'Phone Number...'}}) }}
                    </div>
                    <div class="col-sm-6">
                        {{ form_widget(form.birthday, {'attr' : {'class' : 'form-control', 'placeholder': 'Birthday...'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_row(form.file) }}
                </div>
                <button type="submit" class="btn btn-primary btn-user btn-block">
                    Update Address Book
                </button>
                <hr>
            </form>

        </div>
    </div>
</div>
{% endblock %}